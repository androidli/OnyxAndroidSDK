<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingBottom="15dp" >

    <ImageButton
        android:id="@+id/imageviewbutton_all"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/reader_menu_item_background"
        android:contentDescription="@drawable/ic_secarch_dialog_view_secarch_all"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_secarch_dialog_view_secarch_all" />

    <ImageButton
        android:id="@+id/imageviewbutton_backward"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/reader_menu_item_background"
        android:contentDescription="@drawable/ic_secarch_dialog_view_backward"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_secarch_dialog_view_backward" />

    <ImageButton
        android:id="@+id/imageviewbutton_forward"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/reader_menu_item_background"
        android:contentDescription="@drawable/ic_secarch_dialog_view_forward"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_secarch_dialog_view_forward" />

    <ImageButton
        android:id="@+id/imageviewbutton_dismiss"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/reader_menu_item_background"
        android:contentDescription="@drawable/ic_secarch_dialog_view_dismiss"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_secarch_dialog_view_dismiss" />

    <TextView
        android:id="@+id/textview_page"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:background="#00FFFFFF"
        android:gravity="bottom|right"
        android:textColor="#000000"
        android:layout_marginRight="10dp"
        android:textSize="20sp" />

</LinearLayout>