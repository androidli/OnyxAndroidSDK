<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:gravity="center"
    android:minWidth="280dp"
    android:background="#FFFFFFFF"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/black" />

    <Button
        android:id="@+id/button_fonts"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingLeft="4dp"
        android:gravity="center"
        android:text="@string/menu_item_fonts"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#555555" />

    <Button
        android:id="@+id/button_spacing"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingLeft="4dp"
        android:text="@string/menu_item_line_spacing"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#555555" />

    <Button
        android:id="@+id/button_refash"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingLeft="4dp"
        android:text="@string/menu_item_refresh"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#555555" />

    <Button
        android:id="@+id/button_dictionary"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingLeft="4dp"
        android:gravity="center"
        android:text="@string/menu_item_dictionary"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold" />
    
     <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#555555" />
     
    
    <Button
        android:id="@+id/button_search"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingLeft="4dp"
        android:gravity="center"
        android:text="@string/menu_item_search"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold" />
    
     <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#555555" />
     
    <Button
        android:id="@+id/button_settings"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingLeft="4dp"
        android:gravity="center"
        android:text="@string/menu_item_settings"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

</LinearLayout>