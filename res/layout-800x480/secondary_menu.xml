<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layout_child"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:baselineAligned="false"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone" >
    </LinearLayout>

    <TextView
        android:id="@+id/textview_child_lines"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_selected_6"
        android:layout_marginBottom="-4dp"
        android:visibility="gone"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/layout_tts"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/reader_menu_item_background"
            android:layout_weight="1.0"
            android:gravity="center"
            android:focusable="true"
             >
            <TextView
                android:id="@+id/textview_tts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center_horizontal"
                android:text="@string/menu_item_tts"
                />

            <ImageView
                android:id="@+id/imageview_tts"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_above="@id/textview_tts"
                android:layout_centerHorizontal="true"
                android:contentDescription="@drawable/tts"
                android:background="@color/read_menu_item_background_color"
                android:scaleType="fitCenter"
                android:src="@drawable/tts" />
        </RelativeLayout>
    
        <RelativeLayout
            android:id="@+id/layout_font_increase"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="1.0"
            android:visibility="gone"
            android:background="@drawable/reader_menu_item_background"
            android:gravity="center"
            android:focusable="true" >

            <TextView
                android:id="@+id/textview_font_increase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center_horizontal"
                android:visibility="gone"
                android:text="@string/menu_item_font_increase"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/textview_line_spacing"
                android:layout_centerHorizontal="true"
                android:background="@color/read_menu_item_background_color"
                android:contentDescription="@drawable/font_increase"
                android:scaleType="fitCenter"
                android:src="@drawable/font_increase" />

        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/layout_spacing"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="1.0"
            android:background="@drawable/reader_menu_item_background"
            android:focusable="true"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/textview_line_spacing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center_horizontal"
                android:ellipsize="marquee"
                android:text="@string/menu_item_line_spacing"
                />

            <ImageView
                android:id="@+id/imageview_line_spacing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/textview_line_spacing"
                android:layout_centerHorizontal="true"
                android:background="@color/read_menu_item_background_color"
                android:contentDescription="@drawable/line_spacing"
                android:scaleType="fitCenter"
                android:src="@drawable/line_spacing" />
        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/layout_dictionary_footer"
            android:layout_width="75dp"
            android:layout_height="70dp"
            android:layout_weight="1.0"
            android:background="@drawable/reader_menu_item_background"
            android:gravity="center"
            android:focusable="true"
            >
            <TextView
                android:id="@+id/textview_dictionary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center_horizontal"
                android:ellipsize="marquee"
                android:text="@string/menu_item_dictionary"
                />

            <ImageView
                android:id="@+id/imageview_dictionary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/textview_dictionary"
                android:layout_centerHorizontal="true"
                android:contentDescription="@drawable/menu_dictionary"
                android:background="@color/read_menu_item_background_color"
                android:scaleType="fitCenter"
                android:src="@drawable/menu_dictionary" />
        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/layout_font_decrease"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="1.0"
            android:visibility="gone"
            android:background="@drawable/reader_menu_item_background"
            android:focusable="true"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/textview_font_decrease"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center_horizontal"
                android:text="@string/menu_item_line_spacing"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imageview_font_decrease"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/textview_line_spacing"
                android:layout_centerHorizontal="true"
                android:background="@color/read_menu_item_background_color"
                android:contentDescription="@drawable/font_decrease"
                android:scaleType="fitCenter"
                android:src="@drawable/font_decrease" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_font"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="1.0"
            android:background="@drawable/reader_menu_item_background"
            android:gravity="center"
            android:focusable="true" >

            <TextView
                android:id="@+id/textview_font"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center_horizontal"
                android:text="@string/menu_item_font"
                />

            <ImageView
                android:id="@+id/imageview_font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/textview_font"
                android:layout_centerHorizontal="true"
                android:contentDescription="@drawable/font"
                android:background="@color/read_menu_item_background_color"
                android:scaleType="fitCenter"
                android:src="@drawable/font" />
        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/layout_toc"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="1.0"
            android:background="@drawable/reader_menu_item_background"
            android:gravity="center"
            android:visibility="gone"
            android:focusable="true" >

            <TextView
                android:id="@+id/textview_toc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center_horizontal"
                android:visibility="gone"
                android:text="@string/directory_title"
                />

            <ImageView
                android:id="@+id/imageview_toc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/textview_toc"
                android:layout_centerHorizontal="true"
                android:contentDescription="@drawable/directory"
                android:background="@color/read_menu_item_background_color"
                android:scaleType="fitCenter"
                android:src="@drawable/directory" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_more"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="1.0"
            android:background="@drawable/reader_menu_item_background"
            android:gravity="center"
            android:focusable="true" >

            <TextView
                android:id="@+id/textview_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center_horizontal"
                android:visibility="gone"
                android:text="@string/menu_item_more"
                />

            <ImageView
                android:id="@+id/imageview_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/textview_more"
                android:layout_centerHorizontal="true"
                android:contentDescription="@drawable/more"
                android:background="@color/read_menu_item_background_color"
                android:scaleType="fitCenter"
                android:src="@drawable/more" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>